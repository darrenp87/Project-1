body {
    font-family: "Montserrat", "Helvetica Neue", Arial, Helvetica, sans-serif, Arial, sans-serif;
    background-image: url(../images/restaurant-bg.jpg);
    background-attachment:fixed;
    background-size: cover;
}

p {
    padding: 20px;
    font-size: medium;
}


h4 {
    font-style: italic;
}

.container {
    color: black;
}

#calculator {
    background-color: #808080;
    border-radius: 0px 0px 10px 10px;
}

#header {
    background-color: #ffa500;
    text-align: center;
    border-bottom: 2px solid black;
    padding: 20px;
    color: black;
}

#secondHeader {
    background-color: #ffa500;
    text-align: center;
    padding: 20px;
    border-radius: 10px 10px 0px 0px;
    border-bottom: 2px solid black;
    color: black;
    margin-top: 10px;
}

#inputDiv {
    padding: 50px 100px 50px 100px;
}

#outputDiv {
    padding: 50px 100px 50px 100px;
}

#SubmitButton {
    margin-top: 150px;
    margin-bottom: 50px;
}

#outputDiv p {
    padding-left: 100px;
}

#billTB, #peopleTB, #percentTB, #toPay, #perPerson, #tipTotal, #drinkTB, #starterTB, #mainTB, #dessertTB { 
    border: 1px solid #848484; 
    -webkit-border-radius: 30px; 
    -moz-border-radius: 30px; 
    border-radius: 30px; 
    outline:0; 
    height:25px; 
    width: 200px; 
    padding-left:10px; 
    padding-right:10px; 
    color: black;
  } 

#toPay, #perPerson, #tipTotal {
    background-color: #d7cec7;
}

#graph {
    background-color: #b6a19e;
    color: black;
    font-size: medium;
    padding-left: 100px;
}

#chartContainer {
    margin-top: 50px;
}

#SubmitButton, #ResetButton, #DrawGraph {
    background-color: #d7cec7;
    border: none;
    color: black;
    padding: 10px 25px;
    text-align: center;
    font-size: 16px;
    margin-left: 10px;
    -webkit-transition-duration: 0.4s;
    transition-duration: 0.4s;
    cursor: pointer;
    border-radius: 10px;
}

#SubmitButton:hover, #DrawGraph:hover{
    background-color: #76323f;
    color: white;
}

#ResetButton {
    background-color: #c23b22;
    padding: 6px 18px;
    margin-left: 24px;
}

#ResetButton:hover {
    background-color: #bf0000;
    color: white;
}

#DrawGraph {
    padding: 8px 14px;
}

#chartBtn {
    padding-top: 175px;
}

.ErrorMessage {
    color: red;
}
